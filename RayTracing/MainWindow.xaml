<Window x:Class="RayTracing.MainWindow" xmlns:my="clr-namespace:RayTracing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="720" Width="1280" Loaded="Window_Loaded">
    <Grid>
        <Image Name="Im"/>
        <Border Name="BdSave" Width="160" Height="80" Background="AntiqueWhite" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="30" Visibility="Collapsed" Opacity="0" MouseUp="BdSave_MouseUp">
            <TextBlock FontSize="60" FontWeight="Bold" Foreground="Brown" TextAlignment="Center" VerticalAlignment="Center">Save</TextBlock>
        </Border>
    </Grid>
</Window>
